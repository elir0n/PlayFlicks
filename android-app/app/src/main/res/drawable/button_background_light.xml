<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Light gray when pressed -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Light button background -->
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#C0C0C0"/> <!-- Subtle border -->
        </shape>
    </item>
</selector>
