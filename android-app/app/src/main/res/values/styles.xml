<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UnsignedHomeBigText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="netflixSquareButton" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@android:color/holo_red_light</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="netflixActionBarIcon">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>

    </style>
</resources>